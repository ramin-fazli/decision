#!/bin/bash

# Universal setup launcher for Decision Platform
# This script detects the environment and runs the appropriate setup script

echo "ğŸš€ Decision Platform Setup Launcher"
echo "======================================"

# Detect the operating system and shell
if [[ "$OSTYPE" == "msys" || "$OSTYPE" == "win32" ]]; then
    echo "ğŸ” Detected: Windows with Git Bash/MSYS"
    echo "ğŸ“‹ Running Windows-compatible bash setup..."
    exec ./scripts/setup.sh
elif [[ "$OS" == "Windows_NT" ]]; then
    echo "ğŸ” Detected: Windows"
    echo "ğŸ“‹ For best experience, run: scripts\\setup.bat"
    echo "ğŸ“‹ Or continuing with bash script..."
    exec ./scripts/setup.sh
else
    echo "ğŸ” Detected: Unix-like system ($OSTYPE)"
    echo "ğŸ“‹ Running bash setup script..."
    exec ./scripts/setup.sh
fi
